@model X.PagedList.IPagedList<Garcom>
@using X.PagedList.Mvc.Core;
@using X.PagedList.Web.Common;

<table class="table">
        <thead class="thead-dark">
        <tr>
            <th>Id</th>
            <th>Nome</th>

            <th>Idade</th>
            <th></th>
        </tr>
        </thead>
        <tbody>
            @for (int i = 0; i < Model.Count; i++)
            {
                <tr>
            <td>@Model[i].Id</td>
            <td>@Model[i].Nome</td>
            <td>@Model[i].Idade</td>
            <td><input type="button" value="Editar" class="btn btn-dark" onclick="javascript:window.location=`/Garcom/Detalhe/${@Model[i].Id}`">
            <input type="button" value="Excluir" class="btn btn-danger" onclick="Excluir(@Model[i].Id)"></td>
            
            </tr>
            }
        
        </tbody>
    </table>

    @Html.PagedListPager(Model, pagina => Url.Action("Index", new { pagina })) <!--Com este comando aparece os numeros-->