@model Garcom
@{
    ViewData["Title"] = "Adicionar um novo Garçom";
}


<div class="text-center">
    <h4>@if (Model.Id > 0)
        {
            @Html.Raw("Editar Garçom");
        } else {
            @Html.Raw("Incluir Garçom");
        }
    </h4>
</div>

<form method="POST" asp-action="Detalhe" asp-controller="Garcom" class="form p-5"
    style="border: 3px solid grey; background: #E6E6E6; border-radius: 15px; margin-top: 30px;">
    <div class="text-danger">@Html.ValidationSummary()</div>

    <div class="row">
        <div class="col-md-6">
            <input asp-for="Id" type="hidden" class="form-control">
            <label for="inputNome" class="form-label">Nome</label>
            <input asp-for="Nome" type="text" class="form-control">
        </div>

        <div class="col-md-6">
            <label for="inputIdade" class="form-label">Idade</label>
            <input asp-for="Idade" type="text" class="form-control">
        </div>
    </div>

    <div class="row">
        <div class="col-md-6">
            <label for="inputDataAdmissao" class="form-label">Data de Admissão</label>
            <input asp-for="DataAdmissao" type="date" class="form-control" maxlength="10">
        </div>
    </div>
    <input type="submit" value="Salvar" class="btn btn-success" 
        style="margin-top: 30px; margin-bottom: 15px;">
